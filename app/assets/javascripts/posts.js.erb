$(document).ready(function(){
  // Change the sub-category select when
  // category select is changed
  $('#category_id').change(function(){
    console.log("Been here!");
    v = $(this).val()
    if(v.length >= 1){
      $.ajax({
        url: "/categories/" + v + "/get_subcategories.js",
        type: "GET",
        dataType: "script",
        data: {"category_id": v}
      })
    } else {
      $('#subcategories_select').html("");
    }
  });
})

