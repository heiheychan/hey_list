$(document).ready(function(){
  $('#category_id').change(function(){
    $.ajax({
      url: "/categories/" + $(this).val() + "/get_subcategories.js",
      type: "GET",
      dataType: "script",
      data: {"category_id": $(this).val()}
    })
  });
})