<%- if controller_name != 'sessions' %>
  <%= link_to t("share.devise_link.log_in"), new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("share.devise_link.sign_up"), new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("share.devise_link.forget_password"), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t("share.devise_link.no_confirm_email"), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t("share.devise_link.no_unlock_instruct"), new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t("share.devise_link.omni_1")+"#{OmniAuth::Utils.camelize(provider)}"+t("share.devise_link.omni_2"), omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
