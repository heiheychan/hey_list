<h1>Edit a post</h1>
<%= form_for @post, url: post_images_path(@post), method: :post do |f| %>
  <%= render partial: "share/images_form", locals: {
    :f => f} %>
<% end %>
<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <%= render partial: "share/post_form_error" %>
  <% end %>
  <%= render partial: "share/post_form", locals: {:f => f} %>
<% end %>