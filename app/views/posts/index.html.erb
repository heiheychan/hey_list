<h1>Display All Posts</h1>
<%= link_to "Create Post", new_post_path %>
  <%= render(:partial => "share/search_form") %>
<hr>
<table>
  <% @posts.each do |p| %>
    <tr>
      <td><%= link_to p.title, post_path(p) %></td>
      <td><%= p.category %></td>
      <td><%= p.sub_category %></td>
      <% if p.price_visible %>
        <td>
          <%= number_to_currency(p.price, precision: 3, significant: true, strip_insignificant_zeros: true) %>
        </td>
      <% end %>
      <td><%= user_timezone(p.created_at).strftime("%b %e, %l:%M %p") %></td>
      <td><%= user_timezone(p.updated_at).strftime("%b %e, %l:%M %p") %></td>
      <td>
        <%= link_to "Delete Post", post_path(p), :method => :delete, :data => {:confirm => "Are you sure?"} %>
        <%= link_to "Edit Post", edit_post_path(p) %>
      </td>
    </tr>
  <% end %>
</table>


