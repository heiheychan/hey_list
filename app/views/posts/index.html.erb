<div class="posts-index">
  <section class="up">
    <div class="nav clearfix">
      <a href="#" class="logo">hey!List</a>
      <nav>
        <% if current_user %>
          <a href="<%= new_post_path %>"><span class="glyphicon glyphicon-plus-sign"></span>Create Post</a>
          <%= link_to "Log out",
            destroy_user_session_path, :method => :delete %>
        <% else %>
          <%= link_to "Log in", login_path %>
          <%= link_to "Sign up",
            signup_path %>
        <% end %>
      </nav>
    </div>
    <div class="main-text">
      <h1>Welcome to hey!list</h1>
      <p>The classified for international students. By International student :)</p>
    </div>
  </section>
  <section class="main">

    <%= render(:partial => "share/search_form") %>
    <div class="posts-wrapper">
      <div class="posts">
      <% @posts.each do |p| %>
        <div class="one-post">
          <a href="<%= post_path(p.id) %>">
            <div class="top clearfix">
              <p class="cat"><%= p.category %></p>
              <h3><%= truncate(p.title, length: 40) %></h3>
              <p class="price">
              <% if !p.price_hide %>
                <%= number_to_currency(p.price, precision: 3, significant: true, strip_insignificant_zeros: true) %>
              <% end %>
              </p>
            </div>
            <div class="bottom clearfix">
              <p>
                <span class="label label-<%= get_label(p.sub_category) %>"><%= p.sub_category %></span>
                <% if !p.sub_category.empty? %>
                  &#183;
                <% end %>
                <span class="location"><%= p.address %></span>
                &#183;
                <span class="create-at"><%= user_timezone(p.created_at).strftime("%b %e, %l:%M %p") %></span>
              </p>
            </div>
            <div class="post-buttons" style="display: none">
              <%= link_to "Edit", edit_post_path(p), :class => "edit-post" %>
              <%= link_to "Delete", post_path(p), :method => :delete, :data => {:confirm => "Are you sure?"}, :class => "delete-post" %>
            </div>
          </a>
        </div>
      <% end %>
      </div>
      <div class="google-ad-wrapper">
        <img src="http://fpoimg.com/300x600">
      </div>
    </div>
  </section>
</div>





