<h1>Single Post</h1>
<%= link_to "Home Page", root_path %>
<%= @post.title %>
<%= @post.category %>
<% unless @post.sub_category.nil? %>
  <%= @post.sub_category %>
<% end %>
<% if !@post.price_hide %>
  <%= number_to_currency(@post.price, precision: 3, significant: true, strip_insignificant_zeros: true) %>
<% end %>
<%= markdown(@post.content) %>
<%= user_timezone(@post.created_at).strftime("%b %e, %l:%M %p") %>
<%= user_timezone(@post.updated_at).strftime("%b %e, %l:%M %p") %>
<%= @post.address %>
<%= @post.latitude %>
<%= @post.longitude %>
<%= @post.user.id %>
<%= link_to "Edit Page", edit_post_path(@post) %>

<%= render(:partial => "share/comment_form") %>

<% @post.comments.each do |c| %>
  <p><%= c.content %>---<span><%= c.created_at %></span>---<span><%= c.user.id %></span>---<span><%= link_to "Delete", comment_path(c), method: :delete %></span></p>

<% end %>

