<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :category %>
  <%= f.collection_select :category, Category.all, :id, :name, { prompt: "Choose a category" }, id: "category_id" %>
  <div id="subcategories_select">
   <%= f.collection_select :sub_category, SubCategory.all, :id, :name, { prompt: "Choose a subcategory" }, { disabled: true } %>
  </div>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>